<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.5"
        android:fontFamily="@font/ds_digi"
        android:padding="10dp"
        android:textSize="42sp" />
    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:fontFamily="@font/ds_digi"
        android:gravity="bottom|right"
        android:hint="0"
        android:textSize="72sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/editCE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:background="#CCCCCC"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/editC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:background="#CCCCCC"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/editBS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BS"
            android:background="#CCCCCC"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/editDivision"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:background="#CCCCCC"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/edit7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:background="#F5F5F5"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/edit8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:background="#F5F5F5"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/edit9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:background="#F5F5F5"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/editMulti"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:background="#CCCCCC"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/edit4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:background="#F5F5F5"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/edit5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:background="#F5F5F5"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/edit6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:background="#F5F5F5"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/editSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:background="#CCCCCC"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/edit1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:background="#F5F5F5"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/edit2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:background="#F5F5F5"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/edit3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:background="#F5F5F5"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/editAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:background="#CCCCCC"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/editN_P"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+/-"
            android:background="#CCCCCC"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/editZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:background="#F5F5F5"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/editDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:background="#CCCCCC"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/editResult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:background="#CCCCCC"
            android:layout_margin="3dp"
            android:textSize="24sp"/>
    </LinearLayout>
</LinearLayout>


